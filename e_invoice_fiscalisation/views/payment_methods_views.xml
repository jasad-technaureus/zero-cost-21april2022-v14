<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_payment_methods_list" model="ir.actions.act_window">
        <field name="name">Payment Methods</field>
        <field name="res_model">payment.methods</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="payment_methods_form_view" model="ir.ui.view">
        <field name="name">Payment Methods</field>
        <field name="model">payment.methods</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="payment_methods_tree_view" model="ir.ui.view">
        <field name="name">Payment Methods</field>
        <field name="model">payment.methods</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="type"/>
            </tree>
        </field>
    </record>


    <menuitem id="payment_methods_menu"
              name="Payment Methods"
              parent="account.menu_finance_configuration"
              action="action_payment_methods_list"/>
</odoo>