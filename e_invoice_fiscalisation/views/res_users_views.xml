<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_fiscalisation" model="ir.ui.view">
        <field name="name">res.users.form.fiscalisation</field>
        <field name="model">res.users</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='references']" position="after">
                <page string="Fiscalisation" name="fiscalisation">
                    <group>
                        <group>
                            <field name="operator_code"/>
                            <field name="business_unit_code"/>
                            <field name="invoice_type"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
