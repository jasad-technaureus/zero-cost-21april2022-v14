<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Form view of device type-->
    <record id="sale_book_wizard_from_view" model="ir.ui.view">
        <field name="name">sale.book.wizard.from.view</field>
        <field name="model">sale.book.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Book">
                <sheet>
                    <group col="4" colspan="4" attrs="{'invisible':[('report_printed','=',True)]}">
                        <field name="filter_type"/>
                        <field name="month" attrs="{'invisible': [('filter_type', '=', 'by_date')]}"/>
                    </group>
                    <group col="4" colspan="4" attrs="{'invisible':[('report_printed','=',True)]}">
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <field name="report_printed" invisible="1"/>

                    <field name="sale_book_file" readonly="1" filename="file_name" attrs="{'invisible':[('report_printed','=',False)]}"/>
                    <field name="file_name" invisible="1"/>
                    <footer>
                        <button name="print_xls_report" string="Print xlsx" type="object" class="btn-primary"
                            attrs="{'invisible':[('report_printed','=',True)]}"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>

<!--                    <group col="4" colspan="4">-->
<!--                        <field name="filter_type"/>-->
<!--                        <field name="month" attrs="{'invisible': [('filter_type', '=', 'by_date')]}"/>-->
<!--                    </group>-->
<!--                    <group col="4" colspan="4">-->
<!--                        <field name="from_date"/>-->
<!--                        <field name="to_date"/>-->
<!--                    </group>-->
<!--                    <footer>-->
<!--                        <button string="Print xlsx" class="btn btn-secondary" special="cancel"/>-->
<!--                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>-->
<!--                    </footer>-->
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_book_wizard_action" model="ir.actions.act_window">
        <field name="name">Sale Book</field>
        <field name="res_model">sale.book.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="sale_book_wizard_menu"
              name="Sale Book"
              action="sale_book_wizard_action"
              parent="sale_purchase_book.fiscal_reports_menu"
              sequence="0"/>

</odoo>