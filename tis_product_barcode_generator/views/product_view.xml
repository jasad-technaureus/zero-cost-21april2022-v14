<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_product_category_simple_ean_form" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="ean_sequence_id" domain="[('barcode_sequence', '=', 1)]"
                           context="{'default_name': name and 'EAN ' + name or 'EAN', 'default_barcode_sequence': 1}"/>

                </xpath>
            </field>
        </record>

        <record id="view_product_simple_ean_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="ean_sequence_id" domain="[('barcode_sequence', '=', 1)]"
                           attrs="{'invisible': [('barcode', 'not in', [False,''])]}"
                           context="{'default_name': name and 'EAN ' + name or 'EAN', 'default_barcode_sequence': 1}"/>
                    <button string="Generate the EAN13" name="generate_ean13_new"
                            attrs="{'invisible': [('barcode', 'not in', [False,''])]}"
                            type="object" colspan="2"/>
                </xpath>
            </field>
        </record>

        <record id="product_search_form_view_barcode_ean13" model="ir.ui.view">
            <field name="name">product.product.search.barcode.ean13</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="barcode" string="Barcode"/>
                </field>
            </field>
        </record>
        <record id="view_product_template_simple_ean_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="ean_sequence_id" domain="[('barcode_sequence', '=', 1)]"
                           attrs="{'invisible': [('barcode', 'not in', [False,''])]}"
                           context="{'default_name': name and 'EAN ' + name or 'EAN', 'default_barcode_sequence': 1}"/>
                    <button string="Generate the EAN13" name="generate_ean13_new"
                            attrs="{'invisible': [('barcode', 'not in', [False,''])]}"
                            type="object" colspan="2"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
