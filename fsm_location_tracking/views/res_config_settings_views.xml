<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_form_fsm" model="ir.ui.view">
        <field name="name">fsm.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="industry_fsm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='module_industry_fsm_report']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_fsm_track_location" string="Track Location"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_fsm_track_location"/>
                        <div class="text-muted">
                            Get the location for each task when it is marked as done.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('group_fsm_track_location', '=', False)]}">
                    <div class="o_setting_right_pane">
                        <label for="fsm_distance_km"/>
                        <div class="text-muted">
                            Set Distance To Consider as nearest
                             <field name="fsm_distance_km" string="Distance in KM"/>
                            <span>Kilo Meters</span>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
