<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_config_view_form_main_currency_rate" model="ir.ui.view">
        <field name="name">account_config_view_form_main_currency_rate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='update_exchange_rates']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="main_currency_rate_config">
                    <div class="o_setting_left_pane">
                        <field name="allow_main_curr_rate"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Allow Main Currency Rate" for="allow_main_curr_rate"/>
                    </div>
                </div>
            </xpath>
        </field>

    </record>
</odoo>