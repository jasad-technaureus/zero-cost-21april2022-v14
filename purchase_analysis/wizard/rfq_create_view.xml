<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_create_form_view" model="ir.ui.view">
        <field name="name">purchase.create.form.view</field>
        <field name="model">purchase.create.wizard</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <group>
                    <group>
                        <field name="vendor_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_rfq" string="Create RFQ" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>