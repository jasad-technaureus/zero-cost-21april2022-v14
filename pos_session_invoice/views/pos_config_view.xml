<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_session_invoice" model="ir.ui.view">
        <field name="name">pos_config_view_form_session_invoice</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='accounting_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="session_invoicing">
                    <div class="o_setting_left_pane">
                        <field name="customer_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="customer_invoice"/>
                        <div class="text-muted">
                            Print invoices on session closing
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('customer_invoice', '=', False)]}">
                            <div class="row mt16">
                                <label string="Customer" for="inv_partner_id" class="col-lg-3 o_light_label"/>
                                <field name="inv_partner_id" attrs="{'required': [('customer_invoice', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>