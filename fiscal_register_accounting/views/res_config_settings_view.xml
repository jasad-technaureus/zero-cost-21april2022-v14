<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_fiscal_pos" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_fiscal_pos</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']/h2[2]" position="before">
                    <h2>Fiscal Printer</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
            	    		<div class="o_setting_left_pane"/>
            	    		<div class="o_setting_right_pane">
            	    			 <div class="content-group">
                                     <div class="row mt16">
                                         <label string="Default Fiscal Printer" for="def_fiscal_device_id" class="col-md-3 o_light_label"/>
                                         <field name="def_fiscal_device_id"/>
                                     </div>
                                 </div>
                            </div>
                        </div>
                    </div>
                    <h2>Maximum Amount</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
            	    		<div class="o_setting_left_pane"/>
            	    		<div class="o_setting_right_pane">
            	    			 <div class="content-group">
                                     <div class="row mt16">
                                         <label string="Maximum Amount" for="max_amount_move" class="col-md-3 o_light_label"/>
                                         <field name="max_amount_move" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                     </div>
                                 </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
