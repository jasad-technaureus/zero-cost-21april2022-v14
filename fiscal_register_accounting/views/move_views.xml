<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_view_form_fiscal_printer" model="ir.ui.view">
        <field name="name">account_move_view_form_fiscal_printer</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="fiscal_device_id" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <field name="is_fiscal_print" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <field name="cust_request" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
            </xpath>
        </field>
    </record>
</odoo>