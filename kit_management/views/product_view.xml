<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="product_form_inherit_view" model="ir.ui.view">
        <field name="name">product.form.inherit.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']"
                   position="after">
                <field name="type" invisible="1"/>
                <div>
                    <field name="is_kit" attrs="{'invisible': [('type', '!=', 'consu')]}"/>
                    <label for="is_kit" attrs="{'invisible': [('type', '!=', 'consu')]}"/>
                </div>
            </xpath>
             <xpath expr="//page[@name='inventory']"
                   position="after">
                <page name="kit" string="Kit Components" attrs="{'invisible': [('is_kit', '=', False)]}">
                <field name="product_kit_ids">
                    <tree editable="True">
                        <field name="component_id" required="1"/>
                        <field name="qty"/>
                        <field name="uom_id" required="1"/>
                        <field name="cost"/>
                    </tree>
                </field>
                </page>
            </xpath>

        </field>
    </record>
